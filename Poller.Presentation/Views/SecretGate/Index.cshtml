@model dynamic

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Title
{
    Secret Gate
}
<link href="~/Content/wysihtml5/stylesheet.css" rel="stylesheet" />

<h2>Content</h2>

<div class="row">
    <div class="col-xs-6">
        <h3>Daily Stuff</h3>
    </div>

    <div class="col-xs-6">
        <h3>Tech Radar</h3>
    </div>
    <div id="wysihtml5-toolbar" style="display: none;">
        <a data-wysihtml5-command="bold">bold</a>
        <a data-wysihtml5-command="italic">italic</a>

        <!-- Some wysihtml5 commands require extra parameters -->
        <a data-wysihtml5-command="foreColor" data-wysihtml5-command-value="red">red</a>
        <a data-wysihtml5-command="foreColor" data-wysihtml5-command-value="green">green</a>
        <a data-wysihtml5-command="foreColor" data-wysihtml5-command-value="blue">blue</a>

        <!-- Some wysihtml5 commands like 'createLink' require extra paramaters specified by the user (eg. href) -->
        <a data-wysihtml5-command="createLink">insert link</a>
        <div data-wysihtml5-dialog="createLink" style="display: none;">
            <label>
                Link:
                <input data-wysihtml5-dialog-field="href" value="http://" class="text">
            </label>
            <a data-wysihtml5-dialog-action="save">OK</a> <a data-wysihtml5-dialog-action="cancel">Cancel</a>
        </div>
    </div>

    <div class="col-xs-6">
        <form action="@Url.Action("PushContentToLeftBar", "ContentDisplay", null, Request.Url.Scheme)" method="POST">
            <div id="wysihtml5-toolbar-daily" class="form-group" style="display: none;">
                <a data-wysihtml5-command="bold">bold</a>
                <a data-wysihtml5-command="italic">italic</a>

                <!-- Some wysihtml5 commands require extra parameters -->
                <a data-wysihtml5-command="foreColor" data-wysihtml5-command-value="red">red</a>
                <a data-wysihtml5-command="foreColor" data-wysihtml5-command-value="green">green</a>
                <a data-wysihtml5-command="foreColor" data-wysihtml5-command-value="blue">blue</a>

                <!-- Some wysihtml5 commands like 'createLink' require extra paramaters specified by the user (eg. href) -->
                <a data-wysihtml5-command="createLink">insert link</a>
                <div data-wysihtml5-dialog="createLink" style="display: none;">
                    <label>
                        Link:
                        <input data-wysihtml5-dialog-field="href" value="http://" class="text">
                    </label>
                    <a data-wysihtml5-dialog-action="save">OK</a> <a data-wysihtml5-dialog-action="cancel">Cancel</a>
                </div>
            </div>
            
            <div class="form-group">
                <textarea class="form-control" id="wysihtml5-textarea-daily" name="Content" placeholder="Enter your text ..." autofocus></textarea>
            </div>
            <button type="submit" class="btn btn-default">Daily</button>
        </form>
        @*<form action="@Url.Action("PushContentToLeftBar", "ContentDisplay", null, Request.Url.Scheme)" method="POST">
                <input type="text" id="Content" name="Content"/>

            </form>*@
    </div>
    <div class="col-xs-6">
        <form action="@Url.Action("PushContentToRightBar", "ContentDisplay", null, Request.Url.Scheme)" method="POST">
            <div id="wysihtml5-toolbar-techradar" class="form-group" style="display: none;">
                <a data-wysihtml5-command="bold">bold</a>
                <a data-wysihtml5-command="italic">italic</a>

                <!-- Some wysihtml5 commands require extra parameters -->
                <a data-wysihtml5-command="foreColor" data-wysihtml5-command-value="red">red</a>
                <a data-wysihtml5-command="foreColor" data-wysihtml5-command-value="green">green</a>
                <a data-wysihtml5-command="foreColor" data-wysihtml5-command-value="blue">blue</a>

                <!-- Some wysihtml5 commands like 'createLink' require extra paramaters specified by the user (eg. href) -->
                <a data-wysihtml5-command="createLink">insert link</a>
                <div data-wysihtml5-dialog="createLink" style="display: none;">
                    <label>
                        Link:
                        <input data-wysihtml5-dialog-field="href" value="http://" class="text">
                    </label>
                    <a data-wysihtml5-dialog-action="save">OK</a> <a data-wysihtml5-dialog-action="cancel">Cancel</a>
                </div>
            </div>
            <div class="form-group">
                <textarea class="form-control" id="wysihtml5-textarea-techradar" name="Content" placeholder="Enter your text ..." autofocus></textarea>
            </div>
            <button type="submit" class="btn btn-default">Tech Radar</button>
        </form>
    </div>
</div>
<script src="~/Scripts/wysihtml5/wysihtml5-0.3.0.min.js"></script>
<script src="~/Scripts/wysihtml5/parser-rules/simple.js"></script>

<script>
    var editorDaily = new wysihtml5.Editor("wysihtml5-textarea-daily", { // id of textarea element
        toolbar: "wysihtml5-toolbar-daily", // id of toolbar element
        parserRules: wysihtml5ParserRules // defined in parser rules set
    });
    var editorTr = new wysihtml5.Editor("wysihtml5-textarea-techradar", { // id of textarea element
        toolbar: "wysihtml5-toolbar-techradar", // id of toolbar element
        parserRules: wysihtml5ParserRules // defined in parser rules set
    });
</script>



